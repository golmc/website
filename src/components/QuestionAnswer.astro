---
import Arrow from '../assets/images/arrow.svg'
const {question, answer} = Astro.props
---
<details class="group bg-gol-surface-2 hover:bg-gol-surface-3 open:bg-gol-surface-3 transition-colors w-full shadow-md rounded-lg gol-h3">
  <summary class="flex justify-between items-center p-6 cursor-pointer">
    <span class="select-none" set:html={question}/>
    <Arrow class="h-5 w-5 transition -rotate-90 group-open:rotate-90 ease-gol-bounce duration-1000"/>
  </summary>
  <div set:html={answer} class="max-w-none px-6 py-3 border-t-2 border-t-gol-surface-1"/>
</details>
