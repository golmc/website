---
import "../assets/css/global.css"
import {Font} from 'astro:assets';
const {title} = Astro.props
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---
<head>
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-D5J3BVCQ94"/>
  <script>
    // @ts-nocheck
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-D5J3BVCQ94');
  </script>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>{`${title} | Game of Life`}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
  <link rel="sitemap" href="/sitemap-index.xml"/>
  <link rel="manifest" href="/manifest.json"/>
  <link rel="canonical" href={canonicalURL}/>
  <meta name="generator" content={Astro.generator}/>
  <meta name="title" content={`${title} | Game of Life`}/>
  <meta name="description" content="Moderní simulátor života v Minecraftu. Vytvořeno ve spolupráci s Českou Spořitelnou."/>
  <meta name="theme-color" content="#00c0ff"/>
  <meta property="og:type" content="website"/>
  <meta property="og:url" content={Astro.url}/>
  <meta property="og:title" content={`${title} | Game of Life`}/>
  <meta property="og:description" content="Moderní simulátor života v Minecraftu. Vytvořeno ve spolupráci s Českou Spořitelnou."/>
  <meta property="twitter:url" content={Astro.url}/>
  <meta property="twitter:title" content={`${title} | Game of Life`}/>
  <meta property="twitter:description" content="Moderní simulátor života v Minecraftu. Vytvořeno ve spolupráci s Českou Spořitelnou."/>
  <Font cssVariable="--font-inter"/>
  <Font cssVariable="--font-inter-display"/>
</head>
